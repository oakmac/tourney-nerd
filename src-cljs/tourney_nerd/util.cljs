(ns tourney-nerd.util)

;;------------------------------------------------------------------------------
;; Logging
;;------------------------------------------------------------------------------

(defn js-log
  "Log a JavaScript thing."
  [js-thing]
  (js/console.log js-thing))

(defn log
  "Log a Clojure thing."
  [clj-thing]
  (js-log (pr-str clj-thing)))

;;------------------------------------------------------------------------------
;; Predicates
;;------------------------------------------------------------------------------

(defn one? [x]
  (= x 1))

;;------------------------------------------------------------------------------
;; Misc
;;------------------------------------------------------------------------------

(defn half [x]
  (/ x 2))
